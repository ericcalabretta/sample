# #!/bin/bash -x
exec 2>&1

#create a symbolic link from the generated config file & remove exisiting destination file 
#pkg.svc_config_path is the location of any templated configuration files for the Habitat service
ln -vsf {{pkg.svc_config_path}}/server.xml {{pkgPathFor "core/tomcat8"}}/tc/conf/server.xml

#move our .war(s) to core/tomcat's webapp directory. Uses tc directory for tomcat
cp {{pkg.path}}/*.war {{pkgPathFor "core/tomcat8"}}/tc/webapps